  <div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a href="#register">Register</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{#if error}}
        <p class="alert">{{error}}</p>
      {{/if}}
      <h1>Увійти у магазин</h1>
    <form action="/auth/login" method="post">
        <div class="input-field">
          <input id="email" name="email" type="email" class="validate" required>
          <label for="email">Email:</label>
          <span class="helper-text" data-error="Введіть email" ></span>
        </div>
        <div class="input-field">
          <input id="password" name="password" type="password" class="validate" required min="4">
          <label for="password">Пароль:</label>
          <span class="helper-text" data-error="Введіть пароль" ></span>
        </div>
        <input type="hidden" name = "_csrf" value="{{csrf}}">
        <p><a href="/auth/reset">Forget password?</a></p>
        <button class="btn btn-primary" type="submit">Увійти</button>
    </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if regerror}}
        <p class="alert">{{regerror}}</p>
      {{/if}}
      <h1>Реестрація користувача</h1>
    <form action="/auth/register" method="post" novalidate>
        <div class="input-field">
          <input id="remail" name="email" type="email" class="validate" required>
          <label for="remail">Email:</label>
          <span class="helper-text" data-error="Введіть email" ></span>
        </div>
        <div class="input-field">
          <input id="name" name="name" type="text" class="validate" required>
          <label for="name">Name:</label>
          <span class="helper-text" data-error="Введіть name" ></span>
        </div>
        <div class="input-field">
          <input id="rpassword" name="password" type="password" class="validate" required min="4">
          <label for="rpassword">Пароль:</label>
          <span class="helper-text" data-error="Введіть пароль" ></span>
        </div>
        <div class="input-field">
          <input type="hidden" name = "_csrf" value="{{csrf}}">
          <input id="confirm" name="confirm" type="password" class="validate" required min="4">
          <label for="confirm">Повторний пароль:</label>
          <span class="helper-text" data-error="Введіть пароль" ></span>
        </div>
        <button class="btn btn-primary" type="submit">Підтвердити</button>
    </form>
    </div>
  </div>
  </div>
