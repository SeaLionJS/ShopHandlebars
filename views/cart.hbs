<h1>Cart</h1>

<div id="cart">
{{#if courses.length}}
    <table >
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td><button class="btn btn-small js-remove" 
                data-id="{{id}}" data-csrf="{{@root.csrf}}">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong><span class="price">{{price}}</span></strong></p>
    <form action="order" method="post">
        <button type="submit" class="btn" >Order</button>
        <input type="hidden" name = "_csrf" value="{{csrf}}">
    </form>
{{else}}
    <p>Cart empty</p>
{{/if}}
</div>
